{
        admin unix//run/caddy/caddy-admin.sock
        default_bind {$POD_IP} 127.0.0.1

        http_port 8080
        https_port 8443

        ocsp_stapling off

        servers {$POD_IP}:8080 {
                name health
                protocols h1 h2c
        }

        servers {$POD_IP}:8443 {
                name nextcloud
                trusted_proxies static private_ranges
        }

        log default {
                format console
        }
}

{$POD_IP}:8080 {
        handle /health-check {
                @goingDown vars {http.shutting_down} true
                respond @goingDown "Bye-bye in {http.time_until_shutdown}" 503
                respond 200
        }

        php_fastcgi /ping unix//run/php-fpm/php-fpm.sock {
                index off
        }

        log_skip
}

:8443 {
        root * /var/www/html
        file_server

        tls /tls/tls.crt /tls/tls.key

        request_body {
                max_size 512MB
        }

        encode {
                zstd
                gzip 4

                minimum_length 256

                match {
                        header Content-Type application/atom+xml*
                        header Content-Type application/javascript*
                        header Content-Type application/json*
                        header Content-Type application/ld+json*
                        header Content-Type application/manifest+json*
                        header Content-Type application/rss+xml*
                        header Content-Type application/vnd.geo+json*
                        header Content-Type application/vnd.ms-fontobject*
                        header Content-Type application/wasm*
                        header Content-Type application/x-font-ttf*
                        header Content-Type application/x-web-app-manifest+json*
                        header Content-Type application/xhtml+xml*
                        header Content-Type application/xml*
                        header Content-Type font/opentype*
                        header Content-Type image/bmp*
                        header Content-Type image/svg+xml*
                        header Content-Type image/x-icon*
                        header Content-Type text/cache-manifest*
                        header Content-Type text/css*
                        header Content-Type text/javascript*
                        header Content-Type text/plain*
                        header Content-Type text/vcard*
                        header Content-Type text/vnd.rim.location.xloc*
                        header Content-Type text/vtt*
                        header Content-Type text/x-component*
                        header Content-Type text/x-cross-domain-policy*
                }
        }

        header {
                ?Permissions-Policy "interest-cohort=()"
                ?Referrer-Policy "no-referrer"
                ?Strict-Transport-Security "max-age=31536000"
                ?X-Content-Type-Options "nosniff"
                ?X-Frame-Options "SAMEORIGIN"
                ?X-Permitted-Cross-Domain-Policies "none"
                ?X-Robots-Tag "noindex, nofollow"
                ?X-XSS-Protection "1; mode=block"
        }

        @davClient {
                header HTTP_USER_AGENT DavClnt*
                path /
        }
        redir @davClient /remote.php/webdav/{uri} 302

        route /.well-known/* {
                redir /.well-known/carddav /remote.php/dav/ 301
                redir /.well-known/caldav /remote.php/dav/ 301

                file_server /.well-known/acme-challenge/*
                file_server /.well-known/pki-validation/*

                redir * /index.php{uri} 301
        }

        redir /privacy https://www.privacypolicies.com/privacy/view/<UUID> 308

        handle /robots.txt {
                file_server
                log_skip
        }

        @forbidden {
                path /build/*
                path /tests/*
                path /.htaccess
                path /data/*
                path /config/*
                path /db_structure
                path /.xml
                path /README
                path /3rdparty/*
                path /lib/*
                path /templates/*
                path /occ
                path /console.php
                path /autotest
                path /issue
                path /indie
                path /db_
                path /console
        }
        respond @forbidden 404

        @assetFiles {
                path *.css *.js *.mjs *.svg *.gif *.ico *.jpg *.png *.webp *.wasm *.tflite *.map *.ogg *.flac
        }
        header @assetFiles Cache-Control "public, max-age=15778463, immutable"
        header *.mjs Content-Type text/javascript
        header *.wasm Content-Type application/wasm
        log_skip @assetFiles

        @fontFiles {
                path *.otf *.woff *.woff2
        }
        header @fontFiles Cache-Control max-age=2592000
        log_skip @fontFiles

        php_fastcgi unix//run/php-fpm/php-fpm.sock {
                env front_controller_active true
                request_buffers 512KB
                header_down -X-Powered-By
                capture_stderr
        }
}
